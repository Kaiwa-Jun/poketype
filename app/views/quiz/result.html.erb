  <% pokemon = Pokemon.find_by(id: pokemon_id) %>
  <% if pokemon.present? %>
    <%= "Pokemon Name: #{pokemon.name}, Type ID: #{pokemon.type_id}, Secondary Type ID: #{pokemon.secondary_type_id}, Fake Type ID: #{pokemon.fake_type_id}" %><br>
  <% end %>
<% end %>

